{
  "version": 2,
  "title": "Idle Hours Company",
  "description": "Idle workwear for leisure time.",
  "previewMedia": {
    "type": "image",
    "src": ".sanity-template/assets/IDLE_share.png",
    "alt": "Idle hours"
  },
  "technologies": [
    {
      "id": "nextjs",
      "name": "Next.js",
      "url": "https://nextjs.org/"
    },
    {
      "id": "vercel",
      "name": "Vercel",
      "url": "https://vercel.com/"
    },
    {
      "id": "shopify",
      "name": "Shopify",
      "url": "https://shopify.com/"
    }
  ],
  "deployment": {
    "provider": "vercel",
    "studio": {
      "basePath": "/studio"
    },
    "envVars": {
      "dataset": ["NEXT_PUBLIC_SANITY_PROJECT_DATASET"],
      "projectId": ["NEXT_PUBLIC_SANITY_PROJECT_ID"]
    },
    "tokens": [
      {
        "label": "Live Preview",
        "role": "write",
        "envVar": "SANITY_API_TOKEN"
      }
    ],
    "corsOrigins": [
      {
        "origin": "https://*.vercel.app",
        "allowCredentials": true
      },
      {
        "origin": "http://localhost:3000",
        "allowCredentials": true
      }
    ]
  }
}
